/**
 * @return Library
 */
function grid_get_library(){
  $cache=&drupal_static(__FUNCTION__);
  if(!isset($cache))
  {
    $cache=array();
  }

  if(isset($cache['grid.library']))
  {
    return $cache['grid.library'];
  }

  $library = new Library();
  $cache['grid.library']=$library;

  return $library;

}

/**
 * @return Core
 */
function grid_get_core(){
  return grid_get_library()->core;
}

